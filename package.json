{
  "name": "covid-19-estimator-js",
  "version": "1.0.0",
  "repository": "git@github.com:BuildforSDG-Cohort1-Assessment/covid-19-estimator-js.git",
  "license": "MIT",
  "private": false,
  "nodemonConfig": {
    "exec": "yarn run dev",
    "watch": ["src/*", "dist/*"],
    "ignore": ["**/__tests__/**", "*.test.js", "*.spec.js"]
  },
  "scripts": {
    "start": "yarn run build && node dist/index.js",
    "dev": "SET NODE_ENV=development && yarn run build && node dist/index.js",
    "watch:dev": "nodemon",
    "build": "rm -rf dist && babel src --out-dir dist --config-file ./babel.config.js --ignore node_modules,.git,.github,babel.config.js,package.json,yarn-debug.log --copy-files --no-copy-ignored",
    "test": "jest",
    "lint": "eslint ./src/"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "node-esapi": "0.0.1",
    "on-covid-19": "^0.1.3",
    "xml": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "axios": "^0.19.2",
    "babel-jest": "^25.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^25.2.0",
    "nodemon": "^2.0.3"
  },
  "browserslist": [
    "last 1 Chrome versions"
  ]
}
